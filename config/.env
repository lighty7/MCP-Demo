# Environment Configuration for Universal MCP Server
# Copy this file to .env and fill in your values

# =============================================================================
# GitHub Configuration
# =============================================================================
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name

# =============================================================================
# MySQL Configuration
# =============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=your_database_name

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=your_database_name

# =============================================================================
# MongoDB Configuration
# =============================================================================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=your_database_name

# =============================================================================
# Custom API Configuration
# =============================================================================
# Example: https://api.example.com
CUSTOM_API_URL=http://192.168.30.91:8080
CUSTOM_API_KEY=
# Additional headers as JSON: {"X-Custom-Header": "value"}
CUSTOM_API_HEADERS={}

# =============================================================================
# Local Git Configuration
# =============================================================================
# Base directory where your local git repositories are stored
LOCAL_GIT_BASE_PATH=/home/slave/Desktop/tuiTest
# Default branch name
LOCAL_GIT_DEFAULT_BRANCH=main

